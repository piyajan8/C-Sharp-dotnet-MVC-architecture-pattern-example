@model FoodQuizGame.Models.ViewModels.QuizViewModel
@{
    ViewData["Title"] = $"คำถามที่ {Model.CurrentQuestionNumber}";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-8">
        <div class="flex justify-between items-center mb-2">
            <span class="text-lg font-semibold text-gray-700">คำถามที่ @Model.CurrentQuestionNumber/@Model.TotalQuestions</span>
            <span class="text-lg font-semibold text-orange-600">คะแนน: @Model.CurrentScore</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-3">
            <div class="bg-gradient-to-r from-orange-400 to-pink-400 h-3 rounded-full transition-all duration-500" 
                 style="width: @(((double)Model.CurrentQuestionNumber / Model.TotalQuestions) * 100)%"></div>
        </div>
    </div>

    <div class="bg-white/90 backdrop-blur-sm rounded-3xl shadow-xl p-8 mb-8">
        <div class="text-center mb-6">
            <div class="text-8xl bounce">@Model.CurrentQuestion.Emoji</div>
        </div>

        <h2 class="text-2xl md:text-3xl font-bold text-center text-gray-800 mb-8">
            @Model.CurrentQuestion.QuestionText
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <button onclick="submitAnswer(0)" 
                    class="answer-btn bg-gradient-to-r from-orange-100 to-pink-100 hover:from-orange-200 hover:to-pink-200 p-6 rounded-2xl text-lg font-semibold text-gray-800 transform hover:scale-105 transition-all duration-200 shadow-md hover:shadow-lg">
                @Model.CurrentQuestion.Option1
            </button>
            <button onclick="submitAnswer(1)" 
                    class="answer-btn bg-gradient-to-r from-orange-100 to-pink-100 hover:from-orange-200 hover:to-pink-200 p-6 rounded-2xl text-lg font-semibold text-gray-800 transform hover:scale-105 transition-all duration-200 shadow-md hover:shadow-lg">
                @Model.CurrentQuestion.Option2
            </button>
            <button onclick="submitAnswer(2)" 
                    class="answer-btn bg-gradient-to-r from-orange-100 to-pink-100 hover:from-orange-200 hover:to-pink-200 p-6 rounded-2xl text-lg font-semibold text-gray-800 transform hover:scale-105 transition-all duration-200 shadow-md hover:shadow-lg">
                @Model.CurrentQuestion.Option3
            </button>
            <button onclick="submitAnswer(3)" 
                    class="answer-btn bg-gradient-to-r from-orange-100 to-pink-100 hover:from-orange-200 hover:to-pink-200 p-6 rounded-2xl text-lg font-semibold text-gray-800 transform hover:scale-105 transition-all duration-200 shadow-md hover:shadow-lg">
                @Model.CurrentQuestion.Option4
            </button>
        </div>
    </div>

    <div id="feedback" class="hidden text-center text-2xl font-bold mb-4"></div>
</div>

@section Scripts {
<script>
    async function submitAnswer(selectedIndex) {
        const buttons = document.querySelectorAll('.answer-btn');
        buttons.forEach(btn => btn.disabled = true);

        try {
            const response = await fetch('/Game/SubmitAnswer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    sessionId: @Model.SessionId,
                    questionId: @Model.CurrentQuestion.Id,
                    selectedAnswer: selectedIndex
                })
            });

            const result = await response.json();
            
            if (result.success) {
                const feedback = document.getElementById('feedback');
                feedback.classList.remove('hidden');
                
                buttons.forEach((btn, index) => {
                    console.log(btn + "[]" + index)
                    if (index === selectedIndex) {
                        if (result.isCorrect) {
                            btn.classList.add('bg-green-500', 'text-white');
                            feedback.innerHTML = '✓ ถูกต้อง!';
                            feedback.className = 'text-center text-2xl font-bold mb-4 text-green-500';
                        } else {
                            btn.classList.add('bg-red-500', 'text-white');
                            feedback.innerHTML = '✗ ผิด!';
                            feedback.className = 'text-center text-2xl font-bold mb-4 text-red-500';
                        }
                    }
                });

                setTimeout(() => {
                    window.location.href = '/Game/Play?sessionId=@Model.SessionId';
                }, 1500);
            }
        } catch (error) {
            console.error('Error:', error);
            buttons.forEach(btn => btn.disabled = false);
        }
    }
</script>
}