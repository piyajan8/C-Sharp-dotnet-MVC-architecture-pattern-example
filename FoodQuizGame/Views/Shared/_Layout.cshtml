<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - เกมหาของกิน</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Sarabun', sans-serif; }
        .bounce { animation: bounce 2s infinite; }
        .pulse-stagger-1 { animation: pulse 2s infinite 0.2s; }
        .pulse-stagger-2 { animation: pulse 2s infinite 0.4s; }
        .pulse-stagger-3 { animation: pulse 2s infinite 0.6s; }
        .pulse-stagger-4 { animation: pulse 2s infinite 0.8s; }
        .gradient-text { background: linear-gradient(45deg, #FB923C, #F472B6); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
        .gradient-bg { background: linear-gradient(135deg, #FED7AA, #FECACA, #FEF3C7); }
    </style>
</head>
<body class="gradient-bg min-h-screen">
    <main class="container mx-auto px-4 py-8">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
